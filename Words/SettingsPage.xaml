<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Words.SettingsPage"
             Title="Settings">

    <VerticalStackLayout>
        <Label 
            Text="This App currently covers a 60-day IELTS words plan."
            Margin="30,30,0,0"/>
        <Label
            Text="You can set the start date below."
            Margin="30,30,0,0"/>
        <DatePicker Date="{Binding PlanStartDate}" Format="yyyy-MM-dd" Margin="30,30,0,0"/>
    </VerticalStackLayout>

</ContentPage>
